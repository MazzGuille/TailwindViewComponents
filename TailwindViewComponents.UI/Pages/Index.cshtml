@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var BtnConfirm = new BtnModel
    {
        BtnContent = "TailWind Btn",
        BtnId = "ConfrimBtn"
    };

    var BtnCancel = new BtnLocalModel
    {
        BtnContent = "LocalTailwindBtn",
        BtnId = "CancelBtn"
    };
}

<div class="text-center">
    <h1 class="mt-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>  
    @await Component.InvokeAsync("BtnConfirm", new { Model = BtnConfirm })
    @await Component.InvokeAsync("BtnCancel", new { Model = BtnCancel })
</div>

<script>
        document.addEventListener('DOMContentLoaded', () => {
            var button = document.getElementById('ConfrimBtn');
            var buttonCancel = document.getElementById('CancelBtn');

            if (button) {
                button.addEventListener('click', () => {
                    HandleButtonClick();
                    return;
                });
            }   
            
            if (buttonCancel) {
                buttonCancel.addEventListener('click', () => {
                    HandleCancelButtonClick();
                    return;
                });
            } 
        });

        function HandleButtonClick() {
                alert('Button clicked!');
        }

        function HandleCancelButtonClick() {
                alert('Cancel Button clicked!');
        }
    </script>
